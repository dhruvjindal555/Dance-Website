extends base.pug 

block scripts 
    script(src="index.js")

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css 

block content 
    div.container
        h1 Contact Us 
        form(action="/contact" method="post" class="myForm")
            input(type="text", name="name", class="myInput" placeholder="Enter your name ")
            input(type="number", name="phone", class="myInput" placeholder="Enter your phone number ")
            input(type="email", name="email", class="myInput" placeholder="Enter your email ")
            input(type="text", name="address", class="myInput" placeholder="Enter your address ")
            input(type="text", name="description", class="myInput" placeholder="Enter your description ")
            button(class="btn")
                | Submit
